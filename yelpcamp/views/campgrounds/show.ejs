<% include ../partials/header %>


<div class="container">
    <div class="row">
        <div class="col-med-3">
            <p class="lead">Yelpcamp</p>
            <div class="list-group">
                <list class="list-group-item active">Info</list>
                <list class="list-group-item">Info</list>
                <list class="list-group-item">Info</list>
            </div>
        </div>
        <div class="col-med-9">
            <div class="thumbnail">
                <img class="img-responsoive" src="<%= campground.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$9.00/Night</h4>
                    <h4><%=campground.name%></h4>
                    <p><%= campground.description %></p>
                    <p>
                        <em>Submitted by <%= campground.author.username %></em> 
                    </p>
                    <a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                    <form id="deleteform" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add new comment</a>
                </div>
                <hr>
                <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <dov class="col-med-12">
                           <strong><%= comment.author.username %></strong> 
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %> 
                            </p>
                        </dov>
                    </div>

                <% }) %>
            </div>
        </div>
    </div>
</div>


<% include ../partials/footer%>