<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="title" value="<%= blog.title %>" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="image" value="<%= blog.image %>" required>
        </div>
        <div class="field">
            <label>Blog Post</label>
            <textarea name="blog[body]"  required><%= blog.body %></textarea>
        </div>

        <input class="ui teal big basic button" type="submit">
    </form>
</div>

<% include ./partials/footer %>